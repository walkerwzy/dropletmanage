<?xml version='1.0' encoding='utf-8'?>
<widget id="info.walker.vpn" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Host Manager</name>
    <description>
        A app that can manage DigitalOcean's host quickly, such as shut down a droplet etc.
    </description>
    <author email="walker.wzy@gmail.com" href="http://walkerwzy.info">
        Walker
    </author>
    <platform name="android">
      <icon src="res/icon/android/ldpi.png" density="ldpi" />
      <icon src="res/icon/android/mdpi.png" density="mdpi" />
      <icon src="res/icon/android/hdpi.png" density="hdpi" />
      <icon src="res/icon/android/xhdpi.png" density="xhdpi" />
     </platform>
    <preference name="SplashScreen" value="screen3" />
    <preference name="SplashScreenDelay" value="10000" />
    <content src="index.html" />
    <access origin="*" />
</widget>
